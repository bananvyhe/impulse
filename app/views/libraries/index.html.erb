 <div class="basetext">
  <%# if @library? %>
    <table>
      <tbody>
        <% @libraries.each do |library| %>
          <tr data-item_id="<%= library.id %>">
             
              <% if library.cover? %>
                <td style="float:left; margin-top: 1em; ">
                  <%= image_tag(library.cover.thumb.url, height: '120', )  %> 
                </td>
              <% end %>
              <td style="vertical-align: middle"><h3><%= library.name.capitalize %></h3></td>
              <td style="vertical-align: middle"><p><%= library.desc.html_safe %></p></td>
               <td style="vertical-align: middle"><a href="<%= library.file %>">ссылка на файл</a></td> 
                <td style="vertical-align: middle"> категория <%= library.katbib2.name%> </td> 
              <% if current_user.try(:admin?) %>
                <td style="vertical-align: middle"><%= link_to 'Редактировать', edit_library_path(library) %></td>
                 <td style="vertical-align: middle"><span class="deleteAction">Удалить</span></td> 
              <% end %>
             
          </tr>
        <% end %>
      </tbody>
    </table>
  

  <%# else %>
       <!--  <p>Пока ничего не добавлено</p> -->
  <%# end %>

</div>
