 <div class="basetext">
  <% @libraries.each do |library| %>
    <div style="padding-bottom: 2em;">
    <% if library.cover? %>
      <div style="float:left; padding-bottom: 0.5em; padding-right: 1.2em;"><%= image_tag(library.cover.thumb.url) %></div>
    <% end %>
    <div style="padding-top: 0.5em; "><h3><%= library.name.capitalize %></h3></div>
    <div><p><%= library.desc.html_safe %></p></div>
    <div><a href="<%= library.file %>">ссылка на файл</a></div>
    <div class="cleared"></div>
    <% if user_signed_in? %>
      <div><%= link_to 'Редактировать', edit_library_path(library) %></div>
      <div><%= link_to 'Удалить', library, method: :delete, data: { confirm: 'Вы уверены?' } %></div></div>
    <% end %>
  <% end %>
 
<% if user_signed_in? %> 
  <%= link_to 'Новая публикация', new_library_path %>
<% end %>
</div>