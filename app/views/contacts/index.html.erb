<p id="notice"><%= notice %></p>
<h4>Контакты</h4>
<% @contacts.each do |contact| %>
<div class="contacts">
  <div class="map">
    <%= contact.map.html_safe %>
  </div>

  <div class="contactInfo">
    <div>
      <div>
        <h5>Психологический центр &laquo;Импульc&raquo; </h5>
      </div>
      <div>
        Психологическая помощь взрослым и детям
      </div>      
    </div>

    <div class="contactInfobd">
      <div>
        <%= contact.adress %>
      </div>
      <div>
        Тел.<%= contact.tel %>
      </div>
    </div>

    <div class="infoLast">
      <div>
        Тел:<%= contact.tel %>
      </div>
      <div>
        Е-майл:<%= contact.tel %>
      </div>
    </div>
  </div>
  
</div>

<div>
  <%= link_to 'Редактировать', edit_contact_path(contact), class: "button is-info is-outlined" %>
</div>

<% end %>
<div id="feedback"></div>