<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Емайл %>
    <%= form.text_field :mail %>
  </div>

  <div class="field" style="padding-top: 0.4em;">
    <%= form.label :Адрес %>
    <%= form.text_area :adress , cols: "30", rows: "5"%>
  </div>

  <div class="field">
    <%= form.label :Телефон %>
    <%= form.text_field :tel %>
  </div>

  <div class="field" style="padding-top: 0.4em;">
    <p>код для вставки на сайт  (&lt;iframe&gt;...&lt;&#47;iframe&gt;) </p>
    <%= form.label :Карта %>
    <%= form.text_area :map, cols: "30", rows: "7"%>
  </div>

  <div class="actions">

    <%= form.submit %>
  </div>
<% end %>
