<%= form_for @employee do |f| %> 
  <div style="float: left; padding-top: 1em;">
    <h5>Как зовут сотрудника:</h5>
    <p style= "text-indent: 0em;">
      <%= f.text_field :name  %> 
    </p>


    <% if @employee.avatar? %>
      <div style="background-image: url('<%= @employee.avatar.tiny.url %>'); height:250px; width:225px">
      </div>
    <% end %>
    <div>
      <% unless @employee.avatar? %>
        Загрузите фото сотрудника
        <%= f.file_field :avatar %>
        <%= f.hidden_field :avatar_cache %> 
      <% end %>
 
    </div>    
  </div>

  <div style="padding:7em 0 0 250px;">
    <h5>Специализация:</h5>
    <%= f.cktext_area :spec, ckeditor: {toolbar: 'micro', height: 100  } %> 
  </div>
  <div style="clear: both; padding-top: 0.1em;">
    <h5>Основная информация:</h5>
    <%= f.cktext_area :desc   %> 
    <%= f.submit "Сохранить", :class => "button" %> 
  </div>
<% end %>


