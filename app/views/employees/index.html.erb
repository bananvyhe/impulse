<% if current_user.try(:admin?) %>
  <%= tag.div id: :employees, 
    data: { 
      employees: @employees.to_json,
      type: '1'
  } %> 
<% end %>

 
<% if current_user != :admin %>
  <%= tag.div id: :employees, 
    data: { 
      employees: @employees.to_json,
      type: '2'
  } %> 
<% end %>
<!-- редактор -->

  <% if current_user.try(:admin?) %>
   <br>
    <%= link_to 'Новый сотрудник', new_employee_path %>
  <br>
    <table>
      <tbody>
        <% @employees.each do |employee| %>
          <tr data-item_id="<%= employee.id %>">
            <td><%= employee.name %></td>
           <!--  <td><%= link_to 'Посмотреть', employee %></td> -->
            <td><%= link_to 'Редактировать', edit_employee_path(employee) %></td>
            <td><span class="deleteAction">Удалить</span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   
  <% end %>
</div>
