<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Автор</th>
      <th>Сообщение</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr data-item_id="<%= review.id %>">
        <td><%= review.name %></td>
        <td><%= review.subj %></td>
       <!--  <td><%= link_to 'Show', review %></td> -->
        <td><%= link_to 'Редактировать', edit_review_path(review) %></td>
        <td><span class="deleteAction">Удалить</span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить отзыв', new_review_path %>
