
<div id="reviews"></div>
<% if current_user.try(:admin?) %>
<h2>Редактор отзывов:</h2>
<table>
  <thead>
    <tr>
      <th>Автор</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr data-item_id="<%= review.id %>">
        <td><%= review.name %></td>
        
       <!--  <td><%#= link_to 'Show', review %></td> -->
        <td><%= link_to 'Редактировать', edit_review_path(review) %></td>
        <td><span class="deleteAction">Удалить</span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить отзыв', new_review_path %>
<% end %>
