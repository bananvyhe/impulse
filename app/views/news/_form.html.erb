<%= simple_form_for(@news) do |f| %>
  <%= f.error_notification %>

  <% if @news.newspic? %>
    <div  style="background-image: url('<%= @news.newspic.thumb.url %>');" class="newspic"></div>
  <% end %>
  <div><span  class="adminzone"> <span class="largetext">Картинка для привлечения внимания: &nbsp; </span>
    <% unless @news.newspic? %>
      <%= f.file_field :newspic, :class => "button" %>
    <% end %><span class="tinytext">(при необходимости)</span> </span>
    <h5>Основная информация:</h5>
    <div>
       <%= f.cktext_area :desc %>
    </div>
   
  </div>

  <div>
    <%= f.submit "Сохранить",  :class => "button"%>
  </div>
<% end %>
