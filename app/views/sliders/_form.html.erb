
<%= simple_form_for(@slider) do |f| %>
  <%= f.error_notification %>
  <% if @slider.slide? %>
      <div  style="background-image: url('<%= @slider.slide.thumb.url %>');" class="slidepic"></div>
  <% end %>

  <div>

    <h5>Заголовок слайда:</h5>
    <div>
       <%= f.input :caption1 , as: :text, label: false, :input_html => { :cols => 40, :rows => 3 } %>
    </div>
    <h5>Текст слайда:</h5>
    <div>
       <%= f.input :caption2 , as: :text, label: false, :input_html => { :cols => 40, :rows => 7 }  %>
    </div>
      <!-- <h5>Cсылка:</h5> -->
    <div>
       <%#= f.input :ssilka, as: :text, label: false, :input_html => { :cols => 60, :rows => 2 }  %>
    </div>
  </div>  
      <% unless @slider.slide? %>
      <h5>Картинка слайда:</h5>
      <%= f.file_field :slide, :class => "button" %>
      <%= f.hidden_field :slide_cache %> 
      <div style="background-color: #ada; padding: 0.5em 1em; margin: 0.5em 0;">
      <h5>Cсылка по кнопке "поделиться" на Youtube</h5>
     <!--  <h6>на youtube.com нажать кнопку "поделиться", затем "копировать"</h6> -->
      <%= f.input :slidetube, as: :text, label: false, placeholder: 'https://youtu.be/low4h-Dm04c',  :input_html => { :cols => 40, :rows => 2 }%>   
       
      </div>

    <% end %>
  <div class="form-actions">
    <%= f.submit "Сохранить",  :class => "button" %>
  </div>
<% end %>
