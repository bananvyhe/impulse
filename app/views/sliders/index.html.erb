<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Слайд</th>
      <th>Заголовок</th>
      <th>Текст</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sliders.each do |slider| %>
      <tr data-item_id="<%= slider.id %>">
        <td class="slidepic" style="background-image: url('<%= slider.slide.thumb.url %>');"></td>
        <td><%= strip_tags(slider.caption1.html_safe) %></td>
        <td><%= strip_tags(slider.caption2.html_safe) %></td>
        <td><%= link_to 'Редактировать', edit_slider_path(slider) %></td>
        <td><span class="deleteAction">Удалить</span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый слайд', new_slider_path %>
