<h2>Профаел  </h2>

<div>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, label: 'Емайл' %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", hint: "Оставьте пустым, если не хотите менять", required: false, label: 'Пароль' %>
    <%= f.input :password_confirmation, required: false, label: 'Подтвердите пароль' %>
    <%= f.input :current_password, hint: "необходимо указать текущий пароль для изменений", required: true, label: 'Текущий пароль'  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Сохранить" %>
  </div>
<% end %>
</div>



<br>
<%= link_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete %>
<br>
<%= link_to "Назад", :back %>
