
<%= simple_form_for(@player) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :team_id %>
    <%= f.input :name %>
    <%= f.input :graph %>
    <%= f.input :group %>
    <%= f.input :ind %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
